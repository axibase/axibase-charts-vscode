{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ATSD Visualization",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "entity.name.class",
					"match": "(?<![\\d\\w])\\[(configuration|widget|series|tags|group|node|link)\\](?![\\w\\d])"
				},
				{
					"name": "keyword.control",
					"match": "(?<![\\d\\w])(for|endfor|in|list|endlist|var|if|elseif|else|endif)(?![\\w\\d])"
				},
				{
					"name": "entity.name.function",
					"match": "[a-zA-Z][A-Za-z0-9_]+?(?=\\(.*?\\))"
				},
				{
					"name": "support.variable",
					"match": "(?<![\\d\\w])@\\{.+\\}(?![\\w\\d])"
				},
				{
					"name": "string.quoted",
					"match": "(?<![\\d\\w])(['\"]).+\\1(?![\\w\\d])"
				},
				{
					"name": "keyword.operator",
					"match": "(->|=)"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.number-sign",
					"match": "#.++"
				}, 
				{
					"name": "variable.name",
					"match": "(?<![\\d\\w])\\w[-\\w\\d_]+?(?=\\s*=)"
				},
				{
					"name": "constant.numeric",
					"match": "(?<!\\w)[0-9]+?(?![\\w\\d])"
				}
			]
		}
	},
	"scopeName": "source.av"
}