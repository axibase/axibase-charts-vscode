{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ATSD Visualization",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "entity.name.class",
					"match": "\\[(configuration|widget|series|tags|group|node|link)\\]"
				},
				{
					"name": "keyword.control",
					"match": "\\b(for|endfor|in|list)\\b"
				},
				{
					"name": "keyword.operator",
					"match": "\\b(->|=)\\b"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.number-sign",
					"match": "#.++"
				}, 
				{
					"name": "variable.name",
					"match": ".+?(?=(=))"
				},
				{
					"name": "constant.regexp",
					"match": "(?<==).++"
				},
				{
					"name": "constant.numeric",
					"match": "\\b[0-9]+?\\b"
				}
			]
		}
	},
	"scopeName": "source.av"
}